<% if @order.errors.any? %>
  <ul class="alert alert-warning" role="alert" >
    <% @order.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @order, url: complete_order_path(@order.id), class: "form") do |f| %>

  <div class="form-group, forms">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control"%>
  </div>

  <div class="form-group, forms">
    <%= f.label :email %>
    <%= f.text_field :email, class: "form-control"%>
    <small class="form-text text-muted">Example, example@gmail.com</small>
  </div>

  <div class="form-group, forms">
      <%= f.label :address %>
      <%= f.text_field :address, class: "form-control"%>
  </div>

  <div class="form-group, forms">  
    <%= f.label :zip %>
    <%= f.text_field :zip, class: "form-control"%>
  </div>

  <div class="form-group, forms">
    <%= f.label :ccnum %>
    <%= f.text_field :ccnum, class: "form-control"%>
  </div>

  <div class="form-group, forms">
    <%= f.label :expdate %>
    <%= f.text_field :expdate, class: "form-control"%>
    <small class="form-text text-muted">Example, 01/21</small>
  </div>

  <div class="form-group, forms">
    <%= f.label :ccv %>
    <%= f.text_field :ccv, class: "form-control"%>
    <small class="form-text text-muted">Example, 123</small>
  </div>
  <div class="submit">
  <%= f.submit "Complete Order", class: "btn btn-dark"%>
  </div>
<% end %>