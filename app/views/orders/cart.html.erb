<main>
  <h1>Your Cart</h1>

  <%if @items.empty?%>
    <h2>There's nothing in your cart</h2>
    <%=link_to "Start Shopping", products_path %>
  <%else%>
    <ul>

    <% @items.each do |item| %>
      <li><%= link_to Product.find(item.product_id).name, product_path(item.product_id) %>
      <%= link_to order_order_item_path(@current_order.id, item.id), method: :delete do %>
        <i class="material-icons">delete</i>
      <% end %>
      </li>
    <%end%>
    </ul>
  <%end%>
</main> 