<section>
  <h2 class="h-center-text">YOUR CART</h2>

  <table class="table">
  <tbody>

  <% @order.orderitems.each do |orderitem| %>
  <tr>
    <td>
      <span class="img-cart cont-center"><%= image_tag "#{orderitem.product.photo_url}", alt: "#{orderitem.product.name}" %></span>
    </td>

    <td id="text-just-center">
      <h4><%= link_to orderitem.product.name, product_path(orderitem.product) %></h4>
      <p>Quantity: <%= orderitem.quantity %></p>
      <p>
      <%= link_to "edit", edit_orderitem_path(id: orderitem.id) %> | 
      <%= link_to "delete", orderitem_path(id: orderitem.id), method: :delete, data: {confirm: "Are you sure?"} %>
      </p>
    </td>

    <td id="text-just-center">
      <p><span class='text-bold'>$<%= orderitem.subtotal %></span> ($<%= orderitem.product.price %> each)</p>
    </td>
  </tr>
  <% end %>

  </tbody>
  </table>

  <hr class="hr-total">

  <section class="align-right">  
    <h5>TOTAL $<%= @order.total %></h5>
    <p ><%= link_to 'Checkout', edit_order_path(id: @order.id), class:"btn btn-primary" %></p>
  </section>

</section>
