<h2 class="congratulatory statement"> Congratulatory statement. This is your order confirmation screen.  </h2>

<table>
  <h2 id = "order-details"> Order Details </h2>
  <theader>
    <tr class = "table-headers">
      <td>Quantity</td>
      <td>Price</td>
      <td>Item Subtotal</td>
      <td>Item Description</td>
    </tr>
  </theader>
  <tbody>
    <% @order_items.each do |order_item| %>
      <tr>
        <td> <%= order_item.quantity %></td>
        <td> $<%= order_item.product.price %></td>
        <td> $<%= order_item.total %></td>
        <td><%= link_to order_item.product.name, products_path(order_item.product) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3 class= "summary"> Total Price: $<%= @cart.revenue %> </h3>
<h3 class= "summary"> Order Placed: <%= @cart.date_time_order_purchased %></h3>
<h3 class= "summary"> Order Status: <%= @cart.status %> </h3>

<section id= "shipping information">
  <h3> Your order is being shipped to the following address: </h3>
    <p> <%= @cart.user.street_address%> </p>
    <p> <%= @cart.user.city%>, <%= @cart.user.state.upcase %> <%= @cart.user.mailing_zip %> </p>
</section>

<section id= "annoying-message">
    <p> Shipping notifications will be sent to the following email address: <%= @cart.user.email %> </p>
</section>