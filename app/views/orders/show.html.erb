<section>
  <h2>THANK YOU FOR SHOPPING WITH KEGSY</h2>
  <h2>Order Confirmation</h2>
</section>

<section>
  <h2>Order Details</h2>

  <div class = "columns small-6">
    <ul>
      <li>Order: #<%= @order.id %></li>
      <li>Purchased On: <%= @order.created_at.to_date %></li>
      <li>Order Status: <%= @order.status %></li>
    </ul>
  </div>

  <div class = "columns small-6">
    <ul>
      <li>Name: <%= @order.cc_name %></li>
      <li>Shipping Address: <%= @order.address %></li>
      <li>Email: <%= @order.email %></li>
    </ul>
  </div>
</section>


<section>
  <h2>Products</h2>

  <% @order.orderitems.each do |orderitem| %>
  <section class="row checkout">
    <section class = "columns small-12 medium-3">
      <span class="img"><%= image_tag "#{orderitem.product.photo_url}", alt: "#{orderitem.product.name}" %></span>
    </section>

    <section class = "columns small-12 medium-5">
      <%= link_to orderitem.product.name, product_path(orderitem.product) %>
    </section>

    <section class = "columns small-12 medium-4">
      <p>$<%= orderitem.product.price %> x <%= orderitem.quantity %></p>
      <p>Subtotal: $<%= orderitem.subtotal %></p>
    </section>

  </section>
  <% end %>

  <section class = "row total container">
    <section class = "columns small-9 large-8 align-right">
      <p>TOTAL</p>
    </section>

    <section class = "columns small-3 large-4 align-right">
      <p>$<%= @order.total %></p>
    </section>

    <% if @order.status != 'cancel' %>
      <p><%= link_to 'Cancel Order', cancel_order_path(id: @order.id), method: :patch, class:"btn btn-alert" %></p>
    <% end %>
  </section>
  
</section>
