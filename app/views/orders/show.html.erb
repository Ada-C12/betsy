<section class="order-container">

<% if session[:merchant_id] %>
  <!-- displays merchant's open order items -->
  <li class="order-item-header">
    <span>
      PRODUCT
    </span>
    <span>
      QTY
    </span>
    <span>
      PRICE
    </span>
    <span>
      SUBTOTAL
    </span>
    <span>
      ORDER STATUS
    </span>
  </li>
  <% order_items = OrderItem.by_merchant(session[:merchant_id]) %>
  <% order_items.each do |item| %>
    <% product = Product.where(id: item.product_id) %>
    <li class="order-item">
      <span>
        <%= product[0].name %>
      </span>
      <span>
        <%= item.qty %>
      </span>
      <span>
        <%= product[0].price %>
      </span>
      <span>
        <%= item.subtotal %>
      </span>
      <span>
        <%= Order.find_by(id: item.id).status %>
      </span>
    </li>
  <% end %>
<% end %>

<% if session[:order_id] %>
  <!-- displays customer's open order -->
  Current Order: <%= @order.id %>
  <li class="order-item-header">
    <span>
      PRODUCT
    </span>
    <span>
      QTY
    </span>
    <span>
      PRICE
    </span>
    <span>
      SUBTOTAL
    </span>
  </li>
  <% @order.order_items.each do |item| %>
  <% product = Product.find_by(id: item.product_id) %>
  <li class="order-item">
    <span>
      <%= product.name %>
    </span>
    <span>
      <%= item.qty %>
    </span>
    <span>
      <%= product.price %>
    </span>
    <span>
      <%= item.subtotal %>
    </span>
  </li>
  <% end %>

  <%= link_to "Edit Order", edit_order_path(@order.id) %>
  <%= link_to "Checkout", checkout_path(id: @order.id) %>

<% end %>

</section>
