<% @order = Order.find_by(id: params[:id]) %>
<h2> Order Confirmation </h2>

<table class = "table">
  <thead>
    <tr>
      <th> Item </th>
      <th> Quantity </th>
      <th> Subtotal </th>
    </tr>
  </thead>
  <% total = 0 %>
  <% @order.orderproducts.each do |op| %>
  <tr>
    <td> <%= link_to op.product.name, product_path(op.product.id) %> </td>
    <td> <%= op.quantity %> </td>
    <td> $<%= sprintf "%.2f", op.product.price %> </td>
    <% total += op.product.price %>
  </tr>
  <% end %>
</table>

<h3> Order total: $<%= sprintf "%.2f", total %> </h3>
<h3> Order placed: <%= readable_date(@order.created_at.to_s) %> </h3>
