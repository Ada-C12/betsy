<h2>Show page</h2>

<%= @product.name %>
<%= image_tag @product.photo_url, alt: @product.photo_url %>
<%= @product.description %>
<%= @product.price %>

<h4>Add to cart</h4>
<%= form_with model: @order_item, url: add_to_cart_path(@product.id) do |f| %>  
  <%= f.label :quantity %>
  <%= f.text_field :quantity %>
  <%# f.hidden_field :product_id, :value => @product.id %>
  <%= f.submit "Add to Cart" %>
<% end %>

<h4>Add a review</h4>
<%= form_with model: @review, :url => {:action => "review"} do |f| %>

  <%= f.label :rating %>
  <%= f.text_field :rating %>

  <%= f.label :user_review %>
  <%= f.text_field :user_review %>

  <%= f.submit "Submt review" %> 
<% end %>

<h4>Reviews</h4>
<% @product.reviews.each do |review| %>
<ul>
  <li>
      <%= review.rating %>
      <%= review.created_at %>
      <%= review.user_review %>
  </li>
</ul>
<% end %>