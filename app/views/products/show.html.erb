<main>
<div class="container">
  <div class="row">
		<div class="col-lg-12"><h2><%= @product.name.upcase%></h2></div>
	</div>
	<div class="row">
    <div class="col-lg-6 product-photo">
      <% if @product.photo_url %>
      <%= image_tag @product.photo_url, alt: "a picture of a #{@product.name}" %>
		<%end%>
    </div>
		<div class="col-lg-6 align-self-center">
			<p>Seller: <%=@product.wizard.username%></p>
			<p>Price: <%=@product.price%></p>
			<p>Description: <%=@product.description%></p>
			<p>Stock: <%=@product.stock%></p>
			<%= form_with model: OrderItem, url: product_order_items_path(@product.id) do |f| %>
				<%= number_field(:order_item, :quantity, min: 1, value: 1) %>
				<%= f.submit "Add to Cart", class: "btn btn-dark cart-quantity-button" %>
			<% end %>
  </div>
</div>
<table class="container reviews">
	<thead>
		<tr>
			<th class="align-self-center">Reviews</th>
		</tr>
	</thead>


	<%@product.reviews.each do |review|%>
  <tr>
  <%review.rating.times do%>
  <td> <%= image_tag 'https://i.imgur.com/Q3BnKML.png', class: "review-photo"%> </td>
  <%end%>
  </tr>
  <tr class="review-tr">
    <td><%= review.review_comment%></td>
  </tr>
	<%end%>

</table>
<div class="review-button">
    <%=link_to "Make a review", new_product_review_path(@product.id), class: "btn btn-dark"%>
</div>
</main>
