<main>
<div class="container">
	<div class="row">
		<div class="col-lg-12"><h2><%= @product.name.upcase%></h2></div>
	</div>
	<div class="row">
  	<div class="col-lg-6 product-photo">
		<% if @product.photo_url %>
  		<%= image_tag @product.photo_url, alt: "a picture of #{@product.name}" %>
		<%end%>
  	</div>
		<div class="col-lg-6 align-self-center">
  
			<p>Seller: <%=@product.wizard.username%></p>
			<p>Price: <%=@product.price%></p>
			<p>Description: <%=@product.description%></p>
			<p>Stock: <%=@product.stock%></p>
			<%= form_with model: OrderItem, url: product_order_items_path(@product.id) do |f| %>
				<%= number_field(:order_item, :quantity, min: 1) %>
				<%= f.submit "Add to Cart", class: "btn btn-dark" %>
			<% end %>
  	</div>
	</div>
</div>



<h3> Reviews </h3>
<%=link_to "Make A Review"%>

<%@product.reviews.each do |product|%>
<%=product.rating%>
<%end%>

</main>
