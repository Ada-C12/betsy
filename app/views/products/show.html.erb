<section class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="col-md-12">
        <div class="img"><%= image_tag "#{@product.photo_url}"%></div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="col-md-12">
        <h3><%= @product.name %><h3>
        <p><%= @product.description %></p>
        <p>$<%= '%.2f' % @product.price %></p>
        <p>Sold by: <%= link_to @product.merchant.username, merchant_products_path(@product.merchant.id)%></p>
        <% if @product.retired %>
          <p>Not currently for sale</p>
        <% end %>
        <form class="new_order_product" id="new_order_product">
          <%= form_with model: @orderitem, url: "/products/#{@product.id}/orderitems" do |f| %>
            <%= f.label :quantity %>
            <%= f.select :quantity, (1..@product.stock) %>
            <%= f.submit "Add to Cart", class: "btn btn-primary"%>
          <% end %>
        </form>
      </div>
      <%= link_to "Edit", edit_product_path(@product.id), class: "btn btn-primary" %>
      <%= link_to "Back", products_path, class: "btn btn-primary" %>
    </div>
  </div>

</section>




