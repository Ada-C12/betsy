<section class="new-form-page">
<h2>New Product Form</h2>

<% if @product.errors.any? %>
  <ul class="errors">
    <% @product.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render partial: "form", locals: { submit_button_label: "Add product", product_form_class: "new-product-form" } %>