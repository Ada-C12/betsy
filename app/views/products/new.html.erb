<main>
<h1>Add A New Product</h1>
<%= form_with model: @product, class: 'create-product' do |f| %>
<p>Please provide the following information to add a new product to our database:</p>

<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control"%>
</div>

<div class="form-group">
  <%= f.label :price %>
  <%= f.text_field :price, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :stock %>
  <%= f.text_field :stock, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :photo %>
  <%= f.text_field :photo, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :retire %>
  <%= f.check_box :retire, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :categories %>
  <%= collection_check_boxes(:product, :category_ids, Category.all, :id, :name, class: "form-control") %>
</div>

<div class="form-group">
  <%= f.label :description %>
  <%= f.text_field :description, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.submit "Create Product", class: "product-button" %>
<% end %>
</div>
<main>