<% if @category %>
  <h1> Shop All <%= @category.name.capitalize %> Products </h1>
<% else %>
  <h1> Shop All Fruit Products </h1>
<% end %>


<section class="cards-container">
  <% @products.shuffle.each do |product| %>
    <section class="card" style="width: 18rem;">
      <%= image_tag (product.img_url), class:"card-img-top", alt:"#{product.name} product image" %>  
      <div class="card-body">
      <h5> <%= link_to product.name, product_path(product.id) %> </h5>
        <p class="card-text"> $<%= product.price %> </p>
        <% merchant = User.find_by(id: product.user_id)%>
        <p class="card-text"><strong><%=link_to product.user.username, user_path(product.user.id) %>'s</strong> fruit stand </p> 
      </div>  
        <p>
          <% product.categories.each do |category| %>
            <%= link_to category.name, category_products_path(category.id) %>
          <% end %>
        </p>
      </div>    
    </section>
  <% end %>
</section>