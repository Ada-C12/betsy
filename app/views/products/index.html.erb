<section>
  <h1>Products#index</h1>
  <p><%= link_to "Add new product", new_product_path %></p>
  <% if @products.empty? %>
    <p> No products available </p>
  <% end %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Photo</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= link_to product_path(product.id) do %>
            <span class="img"><%= image_tag "#{product.photo_url}"%></span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>

