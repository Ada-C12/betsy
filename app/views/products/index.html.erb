<main>
  <h2>All Products</h2>
  <div class="d-flex p-2">
    <section class="card-columns">
      <% @products.each do |product| %>
        <section class="card">
          <img src="https://user-images.githubusercontent.com/24848110/33519396-7e56363c-d79d-11e7-969b-09782f5ccbab.png", id="not-found", alt="image not available", class="card-img-top">
          <div class="card-body">
            <h5 class="card-title">
              <%=link_to product.name, product_path( product.id ) %>
            </h5>
          </div>
          <div class="card-body">
            <h6 class="card-text">
              Cost:
              <%= product.price %>
            </h6>
            <h6 class="card-text">
              Quantity:
              <%= product.qty %>
            </h6>
          </div>
        </section>
      <% end %>
    </section>
    </div>
  <%=link_to "New Product", new_product_path, class:"nav-link" %>
</main>