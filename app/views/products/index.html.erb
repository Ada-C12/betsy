<main>
  <h2>All Products</h2>
  <section class="product-list">
    <% @products.each do |product| %>
      <div>
        <img src="
          <% if product.photo_url.length <= 1 %>
            <%= image_tag("image_not_found.png", id: "not-found", alt: "image not available") %>
          <% else %%>
            <%= product.photo_url %>", class="prod-show-photo">
          <% end %%>
        <p class="product-info">
          <%=link_to product.name, product_path( product.id ) %>
          <%= product.price %>
          <%= product.qty %>
          <%= product.description %>
        </p>
      </div>
    <% end %>
  </section>
</main>