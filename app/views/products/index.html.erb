<main>
  <h2>All Products</h2>
  <section class="card">
    <% @products.each do |product| %>
      <div class="card-body">
          <% if product.photo_url == nil %>
            <img src="https://user-images.githubusercontent.com/24848110/33519396-7e56363c-d79d-11e7-969b-09782f5ccbab.png", id:"not-found", alt:"image not available">
          <% else %>
            <img src=" <%= product.photo_url %>", class="card-img-top">
          <% end %>
        <p class="card-body">
          <h5 class="card-title">
            <%=link_to product.name, product_path( product.id ) %>
          </h5>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <%= product.price %>
            </li>
            <li class="list-group-item">
              <%= product.qty %>
            </li>
            <li class="list-group-item">
              <%= product.description %>
            </li>
          </ul>
        </section>
      </div>
    <% end %>
    <%=link_to "New Product", new_product_path, class:"nav-link" %>

  </section>
</main>