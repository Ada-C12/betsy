<main>
<section class="show_page">
  <h2 class="show_page__header">
    All Products
  </h2>

  <% @products.each do |product| %>
    <%= link_to product.name, product_path(product.id), class: "show_page_product" %>
    Description: <%= product.description %>
    Price: $<%= product.price %>

  <div class="merchant_product_title">
    <img src= <%= product.photo_url %> alt=<%= product.name %> class="product_image">
  </div>
  <% end %>
  </div>
</section>
</main>
