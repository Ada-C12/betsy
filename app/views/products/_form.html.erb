<%= form_with model: @product, class: product_form_class do |f| %>

  <%# f.text_field :somenameofsomeattributeonbook ... in this case, :title %>
  <%= f.label :Name %>
  <%= f.text_field :name %>

  <%= f.label :Price %>
  <%= f.text_field :price %>

  <%= f.label :Stock %>
  <%= f.text_field :quantity %>

  <%= f.label :img_url %>
  <%= f.text_field :img_url %>

  <%= f.label :description %>
  <%= f.text_field :description %>


<h1> MAKE THESE DROP DOWN BOXES? below!!!</h1>
  <section>
    <%= f.label "Fruits: " %>
    <%= collection_check_boxes(:product, :category_ids, Category.where(category_type: "fruit"), :id, :name) %>
  </section>
  
  <section>
    <%= f.label "Themes: " %>
    <%= collection_check_boxes(:product, :category_ids, Category.where(category_type: "theme"), :id, :name) %>
  </section>

  <section>
    <%= f.label "Categories: " %>
    <%= collection_check_boxes(:product, :category_ids, Category.where(category_type: "category"), :id, :name) %>
  </section>

  <section>
    <%= f.label "Colors: " %>
    <%= collection_check_boxes(:product, :category_ids, Category.where(category_type: "color"), :id, :name) %>
  </section>

  
  
  <%= f.submit submit_button_label, class: "product-form-button" %>

<% end %>