<main>
  <section class="show_page">
  <h3 class="show_page__header">
    <%=action_name%> Product
  </h3>
  
  <section class="product-forms">
  <%= form_with model: @product do |f| %>
    <div class="form-group">
      <%= f.label :categories, class:"checkbox-inline" %>
      <%= collection_check_boxes(:product, :category_ids, Category.all, :id, :name) %>
    </div>

    <div class="form-group">
      <label>Name</label>
      <%=f.text_field :name, class:"form-control"%>
    </div>

    <div class="form-group">
      <label>Merchant Id</label>
      <%=f.text_field :user_id, class:"form-control"%>
    </div>

    <div class="form-group">
      <label>Price</label>
      <%=f.text_field :price, class:"form-control"%>
    </div>

    <div class="form-group">
      <label>Stock</label>
      <%=f.text_field :stock, class:"form-control"%>
    </div>

    <div class="form-group">
      <label>Photo URL</label>
      <%=f.text_field :photo_url, class:"form-control"%>
    </div>

    <div class="form-group">
      <label>Description</label>
      <%=f.text_field :description, class:"form-control"%>
    </div>

    <div class="form-group">
      <%= f.submit "#{action_name}", class:"btn btn-primary" %>
    </div>
    <%end%>
  </section>
  </section>
</main>
