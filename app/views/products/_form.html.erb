<%= form_with model: @product do |f| %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name%>
  </div>

  <div class="form-group">
    <%= f.label :qty %>
    <%= f.text_field :qty%>
  </div>

  <div class="form-group">  
    <%= f.label :price %>
    <%= f.text_field :price%>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description%>
  </div>

  <div class="form-group">
    <%= f.label :status %>
    <%= f.select :status, [["active"], ["retired"]] %>
  </div>

  <%= f.submit submit_button_label%>

<% end %>