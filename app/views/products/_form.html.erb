<section>
  <%= form_with model: @product do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :price %>
      <%= f.number_field :price, in: 1.0..100.0, step: 0.50 %>
    </div>

    <div class="form-group">
      <%= f.label :stock %>
      <%= f.number_field :stock, in: 1..10%>
    </div>

    <div class="form-group">
      <%= f.label :merchant %>
      <%= f.text_field :merchant, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  <% end %>
</section>