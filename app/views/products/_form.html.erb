<section>
  <%= form_with model: @product do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :price %>
      <%= f.text_field :price%>
    </div>

    <div class="form-group">
      <%= f.label :stock %>
      <%= f.text_field :stock%>
    </div>

    <div class="form-group">
    <%= f.label :types %>
    <%= collection_check_boxes(:product, :type_ids, Type.all, :id, :name) %>
    </div>

    <div class="form-group">
      <%= f.label "Retired" %>
      <%= f.check_box :retired%>
    </div>

    <div class="form-group">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  <% end %>
</section>