<section class="order-forms">
  <h2 class="h-center-text-no-pad"> <%= "#{title}" %></h2>
    <section class='form-container'>
      <%= form_with model: @product do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_field :description, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :price %>
          <%= f.text_field :price, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :stock %>
          <%= f.text_field :stock, class: "form-control" %>
        </div>

        <div class="form-group checks">
        <%= f.label :types %> <br>
        <%= collection_check_boxes(:product, :type_ids, Type.all, :id, :name) %>
        </div>

        <div class="form-group">
          <%= f.check_box :retired%>
          <%= f.label "Retire Product" %>
        </div>

        <div class="form-group submit">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      <% end %>
    </section>
  </h2>
</section>