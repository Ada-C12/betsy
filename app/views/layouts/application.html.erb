<!DOCTYPE html>
<html>
  <head>
    <title>Genies</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag 'favicon.ico' %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <%= link_to(root_path, :class => 'navbar-brand') do %>
          <i class="fas fa-home fa-2x"></i>
        <% end %>
        <ul class="navbar-nav nav justify-content-end">
          <% if session[:user_id] %>
            <%= link_to "Log Out", logout_path, method: :delete, class:"nav-link active"%>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", login_path, class:"nav-link"%>
          </li>
          <li class="nav-item">
            <%= link_to "Sign Up", register_path, class:"nav-link"%>
          </li>
        <% end %>
      </ul>
    </nav>
  </header>
  <main class="container-fluid">
    <% if flash[:result_text] or flash[:messages] %>
      <section class="alert-container">
        <div class="alert alert-<%= flash[:status].to_s == 'failure' ? 'warning' : flash[:status] %>">
          <span><%= flash[:status].to_s == "failure" ? "A problem occurred: " : "" %><%= flash[:result_text] %></span>
          <% if flash[:messages] %>
            <ul>
              <% flash[:messages].each do |name, problems| %>
                <% problems.each do |problem| %>
                  <li><%= name %>: <%= problem %></li>
                <% end %>
              <% end %>
            </ul>
          <% end %>
        </div>
      </section>
    <% end %>
    <%= yield %>
  </main>
</body>
</html>
