<!DOCTYPE html>
<html>
  <head>
    <title>Petsy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <%= link_to "Petsy Betsy", root_path%>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to "View All Products", products_path, class: "nav-link" %>
      </li>
      <% if session[:merchant_id]%>
      <li class="nav-item">
        <%= link_to "Add a product", new_product_path, class: "nav-link" %>
      </li>
      <% end %>
      <%= merchants_dropdown%>
      <%= categories_dropdown%>
      <li class="nav-item">
      <%= link_to "Cart", order_path(:id), class: "nav-link" %>
      </li>
    </ul>
  </div>
</nav>
  </header>

  <body>

    <% if session[:merchant_id] %>
      <%= link_to "Log out", logout_path, method: "delete" %>
    <% else %>
      <%= link_to "Login with Github", github_login_path %>
    <% end %>

    <section class="flash">
    <% flash.each do |name, message| %>
      <div class="<%= name %>"><%= message %></div>
    <% end %>
    </section>

    <%= yield %>

  </body>
</html>
