<!DOCTYPE html>
<html>
  <head>
    <title>Baguettsy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Annie+Use+Your+Telescope&display=swap" rel="stylesheet">
  </head>

  <body>
  
    <section>
      <h2 class="toptitle font-weight-bold"><%= link_to "Baguettsy" %></h2>
      <nav class="navbar navbar-expand-lg navbar-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <%= link_to "View All Products", products_path %></li>
            </li>
            <li class="nav-item">
              <%= link_to "Browse by Category", categories_path  %>
            </li>
            <li class="nav-item">
              <%= link_to "Browse by Merchant", merchants_path %>
            </li>
          </ul>

          <ul class="nav navbar-nav navbar-right">
            
             <% if session[:order_id] %>	
              <li>	
                <button type="button" ><li><%= link_to "View Shopping Carb", order_path(session[:order_id]) %></li></button>	
              </li>	
            <% end %>
            
           <% if session[:merchant_id] %>
            Welcome, <%= link_to session[:merchant_name], dashboard_path(session[:merchant_id]) %> 
                 <%= link_to "Log out", logout_path, method: "delete" %>
                 <% else %>
             <%= link_to "Login with Github", github_login_path %>
          <% end %>
          </ul>
        </div>
      </nav>
    </section>
  
  
    <section class="flash">	
    <% if flash[:result_text] or flash[:messages] %>
      <section class="alert__container">
        <div class="alert alert-<%= flash[:status].to_s == 'failure' ? 'warning' : flash[:status] %>">
          <span><%= flash[:status].to_s == "failure" ? "A problem occurred: " : "" %><%= flash[:result_text] %></span>
          <% if flash[:messages] %>
            <ul>
              <% flash[:messages].each do |name, problems| %>
                <% problems.each do |problem| %>
                  <li><%= name %>: <%= problem %></li>
                <% end %>
              <% end %>
            </ul>
          <% end %>
        </div>
      </section>
    <% end %>
    </section>	

    <%= yield %>
  </body>
</html>
