<!DOCTYPE html>
<html>
  <head>
    <title>üçâ fruitsy üçä</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <section class="login-loggout-container">
      <%if session[:user_id]%>
        <% user = User.find_by(id: session[:user_id])%>
        <%= link_to user.username, current_user_path, class: "current-user-btn btn btn-primary" %>
        <%= link_to "Log out", logout_path, method: "delete", class: "btn btn-primary"%>
      <%else %>
        <%= link_to "Login with Github", github_login_path, class: "btn btn-primary "%>
      <%end %>
    </section>
    <h1 class="nav-brand">
      <%= link_to "üçâ fruitsy üçâ", root_path %>
    </h1>

    <nav class="nav navbar navbar-expand-lg navbar-light bg-light">
      <%= link_to "fruitsy", root_path, class:"navbar-brand" %>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <%= link_to "All Fruits", products_path, class:"nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Fruits
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <% Category.where(category_type: "fruit").each do |category| %>
                <%= link_to category.name.capitalize, category_products_path(category.id) , class:"dropdown-item" %>
              <% end%>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Themes
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <% Category.where(category_type: "theme").each do |category| %>
                <%= link_to category.name.capitalize, category_products_path(category.id) , class:"dropdown-item" %>
              <% end%>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Categories
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <% Category.where(category_type: "category").each do |category| %>
                <%= link_to category.name.capitalize, category_products_path(category.id) , class:"dropdown-item" %>
              <% end%>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Colors
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <% Category.where(category_type: "color").each do |category| %>
                <%= link_to category.name.capitalize, category_products_path(category.id) , class:"dropdown-item" %>
              <% end%>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Merchants
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <% User.all.each do |user| %>
                <% if user.merchant_name %>
                  <%= link_to user.merchant_name, user_products_path(user.id) , class:"dropdown-item" %>
                <% end %>    
              <% end %>
          </li>
          <%if session[:user_id]%>
          <li class="nav-item">
            <%= link_to "View my store", current_user_path, class: "nav-link"%>
          </li>
          <li>
            <%= link_to "Add New Product", new_product_path, class:"nav-link" %>
          </li>
          <%end%>
        </ul>
        <form class="form-inline my-2 my-lg-0">
          <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">search</button>
        </form>
      </div>
    </nav>

    <%if flash%>
      <section class="alert__container">
      <ul>
        <% flash.each do |name, message| %>
          <li><%=name.capitalize%>: <%=message%></li>
        <%end%>
      </ul>
      </section>
    <%end %>
    
    <main>
    <%= yield %>
    </main>
  </body>
  
  <footer>
    ¬© 2019 The Fruit Loops
  </footer>
</html>
