<!DOCTYPE html>
<html>
  <head>
    <title>Kegsy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Raleway&display=swap' %>
    <%= stylesheet_link_tag  'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag 'favicon.ico' %>
  </head>

  <body>
    <header class="app-header__header">
      <h1>
        <p>Kegsy</p>
        <small>Drink your Ada troubles away</small>
      </h1>
      

      <nav class="app-header__nav">
        <ul class="nav app-header__site-nav-container">
          <li class="nav-item app-header__nav_item">Products</li>
          <li class="nav-item app-header__nav_item">Merchants</li>
          <li class="nav-item app-header__nav_item">Log In</li>
        </ul>
      </nav>
    </header>

    <% if flash[:result_text] or flash[:messages] %>
      <section class="alert__container">
        <div class="alert alert-<%= flash[:status].to_s == 'failure' ? 'warning' : flash[:status] %>">
          <span><%= flash[:status].to_s == "failure" ? "A problem occurred: " : "" %><%= flash[:result_text] %></span>
          <% if flash[:messages] %>
            <ul>
              <% flash[:messages].each do |name, problems| %>
                <% problems.each do |problem| %>
                  <li><%= name %>: <%= problem %></li>
                <% end %>
              <% end %>
            </ul>
          <% end %>
        </div>
      </section>
    <% end %>
    
    <main>
      <%= yield %>
    </main>

    <footer class="app-footer__footer">
      <section class="app-footer__nav">
        <ul class="nav app-footer__site-nav-container">
          <li class="nav-item app-footer__nav_item">Contact Us</li>
          <li class="nav-item app-footer__nav_item">Order Status</li>
          <li class="nav-item app-footer__nav_item">Shipping</li>
          <li class="nav-item app-footer__nav_item">Returns & Exchanges</li>
          <li class="nav-item app-footer__nav_item">About Us</li>
        </ul>
      <section>
    </footer>
    
  </body>




</html>
