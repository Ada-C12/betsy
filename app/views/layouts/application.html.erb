<!DOCTYPE html>
<html>
  <head>
    <title>bill$ie</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="app-header__header">
      <h1>
        bill$ie
      </h1>

      <nav class="app-header__nav">
        <ul class="nav app-header__site-nav-container">
          <li class="nav-item app-header__nav_item">
            <%=link_to "Home", root_path, class:"nav-link" %>
          </li>
          <li class="nav-item app-header__nav_item">
            <%=link_to "Products", products_path, class:"nav-link" %>
          </li>
          <li class="nav-item app-header__nav_item">
             <%=link_to "New Product", new_product_path, class:"nav-link" %>
           </li>
          <li class="nav-item app-header__nav_item">
            <%=link_to "Categories", categories_path, class:"nav-link" %>
          </li>
          <li class="nav-item app-header__nav_item">
            <%=link_to "Users", users_path, class:"nav-link" %>
          </li>
        </ul>
        <ul class="nav app-header__user-nav-container">
          <% if session[:user_id] == nil%>
            <li class="nav-item app-header__nav_item">
            <%=link_to "Log In", github_login_path, class:"btn btn-primary" %>
            </li>
          <% else %>
            <li class="nav-item app-header__nav_item">
              <%=link_to "Logged in as: #{User.find_by(id: session[:user_id]).name}", user_path( User.find_by(id: session[:user_id]).id ), class:"btn btn-primary" %>
            </li>
          <% end %>
          <% if session[:user_id] != nil%>
            <li class="nav-item app-header__nav_item">
            <%=link_to "Log Out", logout_path, method: :delete, class:"btn btn-primary" %>
            </li>
          <% end %>
        </ul>
      </nav>
    </header>

    <% if flash[:result_text] or flash[:messages] %>
      <section class="alert__container">
        <div class="alert alert-<%= flash[:status].to_s == 'failure' ? 'warning' : flash[:status] %>">
          <span><%= flash[:status].to_s == "failure" ? "A problem occurred: " : "" %><%= flash[:result_text] %></span>
          <% if flash[:messages] %>
            <ul>
              <% flash[:messages].each do |name, problems| %>
                <% problems.each do |problem| %>
                  <li><%= name %>: <%= problem %></li>
                <% end %>
              <% end %>
            </ul>
          <% end %>
        </div>
      </section>
    <% end %>

    <%= yield %>
  </body>
</html>
