

<%= form_for [@product, @review] do |f| %>

  <% if @review.errors.any? %>  
    <section class="alert alert-warning">
      <ul>
        <% @review.errors.each do |column, message| %>
          <li>
            <strong><%= column.capitalize %></strong> <%= message %>
          </li>
        <% end %>
      </ul>
      </section>
  <% end %>

  <p>We don't want to be crumby - leave your feedback below!</p>

    <div class="form-group">
      <label for="rating"><%= f.label :rating %></label>
      <%= f.select(:rating, options_for_select(['1', '2', '3', '4', '5']), {}, {class: "form-control input-small"})%>
    </div>


    <div class="form-group">
      <label for="text"><%= f.label :text %></label>
      <%= f.text_area :text %>

      <%= f.hidden_field :product_id %>

    </div>

    <div class="form-group">
      <%= f.submit class: "btn btn-light", method: :patch %>
    </div>


<% end %>
