<main class="container">
<section>
  <%= form_with model: @review, url: product_reviews_path do |f| %>

    <div class="form-group">
      <%= f.label :rating %>
        <%= f.select :rating, options_for_select([1, 2, 3, 4, 5]), { prompt: true, selected: '2' }, required: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :comment %>
      <%= f.text_field :comment, class: "form-control" %>


 <%= f.submit "Submit Review", class: "btn btn-primary"%>
      <% end %>
    </div>
    </section>
    </main>