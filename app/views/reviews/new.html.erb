
<%# #the rating should be a number scroll down %>

<%= form_with model: @review , url:product_reviews_path do |f| %>
  <%= f.label :rating %>
  <%= f.select :rating, [["★",1],["★★",2],["★★★",3],["★★★★",4],["★★★★★",5]] %>
  <%= f.label :comment %>
  <%= f.text_field :comment %>
  
  <%= f.submit %>
<% end %>
