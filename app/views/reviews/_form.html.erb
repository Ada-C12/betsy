<p>We don't want to be crumby - leave your feedback below!</p>

<%= form_for [@product, @review] do |f| %>

  <% if @review.errors.any? %>  
    <section class="alert alert-warning">
      <ul>
        <% @review.errors.each do |column, message| %>
          <li>
            <strong><%= column.capitalize %></strong> <%= message %>
          </li>
        <% end %>
      </ul>
      </section>
  <% end %>

    <div class="form-group">
      <%= f.label :rating %>: <br>
      
      <%= f.radio_button :rating, '1' %> 1 star <br>
      <%= f.radio_button :rating, '2' %> 2 star <br>
      <%= f.radio_button :rating, '3' %> 3 star <br>
      <%= f.radio_button :rating, '4' %> 4 star <br>
      <%= f.radio_button :rating, '5' %> 5 star <br>
    </div>


    <div class="form-group">
    <%= f.label :text %>
    <%= f.text_area :text %>

    <%= f.hidden_field :product_id %>

    </div>

    <div class="form-group">
      <%= f.submit class: "btn btn-primary", method: :patch %>
    </div>


<% end %>
