<% if @category.errors.any? %>
  <p>Please fix the following...</p>
  <ul>
  <% @category.errors.each do |error, msg|%>
    <li><%= error %>: <%= msg %></li>
  <% end %>
  </ul>
<% end %>

<h1>Add a new Category</h1>
<%= form_with model: @category do |f| %>
  <%= f.label :label %>
  <%= f.text_field :label %>
  <%= f.submit submit_button_label, class: "btn btn-primary"%>
<% end %>
