<main class="homepages-container">
  <section class="newly_added">
    <h2 class="newly_added__header">Just Added!</h2>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-50" src="https://live.staticflickr.com/65535/48983261251_e8d0cd6263_o.jpg" alt="votes">
          <div class="carousel-caption d-none d-md-block">
            <h5><strong>Votes!</strong></h5>
            <h5><small>Buy them all!</small></h5>
          </div>
        </div>
        <div class="carousel-item">
          <img class="d-block w-50" src="https://live.staticflickr.com/65535/48983214336_fdb72ff925_o.jpg" alt="ted">
          <div class="carousel-caption d-none d-md-block">
            <h5><strong>Lyin Ted!</strong></h5>
            <h5><small>Buy good ol Ted!</small></h5>
          </div>
        </div>
        <div class="carousel-item">
          <img class="d-block w-50" src="https://live.staticflickr.com/65535/48983261326_32ec5b1cec_o.jpg" alt="mitt">
        </div>
      </div>
      <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="prev">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </section>

  <section class="spotlight">
    <h2 class="spotlight__header">
      <span class="spotlight__header--prefix">Spotlight Item: </span>
      <% product = Product.spotlight%>
      <%= link_to image_tag(product.photo_url, alt:product.name, class:"d-block w-40"), product_path(product.id), class:"spotlight__link-to"%>
    </h2>
  </section>

  <section class="top_rated">
    <h2 class="top_rated_header">
      <span class="top_rated_header--prefix">Top Rated!</span>
    <% if Product.top_rated == nil%>
      <p> No Reviews Yet <p>
    <% else %>
      <%= link_to Product.top_rated.name, product_path(Product.top_rated.id), class:"top_rated__link-to"%>
    <% end %>
    </h2>
  </section>
  
</main>