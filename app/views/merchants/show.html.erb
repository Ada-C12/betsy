<h1><%= @merchant.name %>'s Dashboard</h1>

<section>

<div class="table-responsive table-striped">
  <table class="table">
    <thead>
      <tr>
        <th>PICTURE</th>
        <th>NAME</th>
        <th>DESCRIPTION</th>
        <th>STOCK</th>
        <th>PRICE</th>
        <th>#reviews???</th>
      </tr>
    </thead>

    <tbody>
      <% @merchant.products.each do |product| %>
        <tr>
          <td><%= product.img_url %></td>
          <td><%= product.name %></td>
          <td><%= product.description %></td>
          <td><%= product.stock %></td>
          <td><%= usd(product.price) %></td>
          <td>???</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>



</section>