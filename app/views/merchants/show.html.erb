<h2>Merchant:<%= @merchant.username %></h2>
<ul>
  <% @merchant.products.each do |product| %>
  <li> Product name: <%= link_to product.name, product_path(product.id)  %> 
    <% if session[:merchant_id] == @merchant.id%>
      <%= link_to "Edit", edit_product_path(product.id), class:"btn btn-primary btn-space"%>
      <%= link_to "Delete", product_path(product.id), class:"btn btn-danger btn-space", method: :delete, data: {confirm: "Are you sure?"} %>
      <% end %>
  </li>
  <ul>
      <li> Price: <%= product.price %> </li>
      <li> Stock: <%= product.stock %> </li>
      <li> Description: <%= product.description %> </li>
      <li> Retire: <%= product.retire %> </li> 
      <%# link to product retire path later %>
    </ul>
  <% end %>
</ul>
