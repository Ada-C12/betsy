<section class="show_page">
  <h2 class="show_page__header">
    Products by <%= @user.username %>
  </h2>

  <% if @user.products.empty? %>
      <p class="no_products_error">
        Sorry, this merchant doesn't have any products yet
      </p>
  <% else %>
    <div class="show_page__tiles merchant_show__tiles">
      <% @user.products.each do |product| %>
      <% if product.available %>
        <div class="merchant_product_tile">
          <a href=<%= product_path(product.id) %>>
            <img src=<%= product.photo_url%> alt=<%= product.name %> class="merchant_product_tile__img">
            <div class="merchant_product_tile__data">
              <h3 class="merchant_product_tile__title">
                <%= link_to product.name, product_path(product.id) %>
              </h3>
              <div class="merchant_product_tile__details">
                <p>$<%= product.price %></p>
                <p><%= product.description %></p>
              </div>
            </div>
          </a>
        </div>
      <% end %>
      <% end %>
    </div>
  <% end %>
</section>
