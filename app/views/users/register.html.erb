<div class="container mt-5">
  <div class="row justify-content-md-center">
    <div class="col-sm-4">
      <div class="card">
        <div class="card-body">
          <h3 class="text-center">Register</h3>
          <div class="row mt-3">
            <div class="col-sm-12">
              <%= link_to  "Register with username", signin_path, class:"btn btn-primary btn-lg btn-block mb-3" %>
              <%= link_to "Register with Github", github_login_path, class:"btn btn-success btn-lg btn-block"%>
            </div>
            <div class="col-sm-12 mt-5 text-center">
              <p>Already have an account?</p>
              <%= link_to "Login", login_path, class:"btn btn-secondary btn-lg btn-block"%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
