<%= form_with model: @user do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :cc_name %>
  <%= f.text_field :cc_name %>

  <%= f.label :cc_number %>
  <%= f.text_field :cc_number %>

  <%= f.label :cc_expiration %>
  <%= f.text_field :cc_expiration %>

  <%= f.label :cvv %>
  <%= f.text_field :cvv %>

  <%= f.label :billing_zip %>
  <%= f.text_field :billing_zip %>

  <%= f.label :street_address %>
  <%= f.text_field :street_address %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :state %>
  <%= f.text_field :state %>

  <%= f.label :mailing_zip %>
  <%= f.text_field :mailing_zip %>

  <%= f.submit "add payment information" %>
<% end %>
