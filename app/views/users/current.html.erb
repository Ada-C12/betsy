<h2>hello, <%=@current_user.username%>!</h2>
<p>You can <%=link_to "edit", edit_user_path%> your profile here.</p>

<section class="user-products__container">
  <h3 class="user-products__header">Manage your products</h3>
  <table class="table">
    <thead>
      <tr>
        <th> Title</th>
        <th> Price</th>
        <th> Quantity</th>
        <th> Description</th>
        <th> Category</th>
      </tr>
    </thead>
    <tbody>
    <%if @current_user.products %>
      <% @current_user.products.each do |product| %>
        <tr>
          <td><%= link_to user.product.title, product_path(user.product) %></td>
          <td><%= vote.work.creator %></td>
          <td><%= vote.work.publication_year %></td>
          <td><%= vote.work.category.capitalize %></td>
          <td><%= render_date vote.created_at %></td>
        </tr>
      <% end %>
    <%end%>
  </table>
</section>

<section class="user-orders__container">
  <h3 class="user-products__header">Manage your orders</h3>
  <table class="table">
    <thead>
      <tr>
        <th> Order id</th>
        <%# #Will require a link to view individual order %>
        <th> Product</th> 
        <%# #Will require a link to the product %>
        <th> Order date</th>
        <th> Status</th>
        <th> Category</th>
      </tr>
    </thead>
    <tbody>
    <%if @current_user.products %>
      <% @current_user.products.each do |product| %>
        <tr>
          <td><%= link_to user.product.title, product_path(user.product) %></td>
          <td><%= vote.work.creator %></td>
          <td><%= vote.work.publication_year %></td>
          <td><%= vote.work.category.capitalize %></td>
          <td><%= render_date vote.created_at %></td>
        </tr>
      <% end %>
    <%end%>
  </table>
</section>
<%= link_to "Back to Home", root_path, class: "btn btn-primary" %>
